<div class="container bg">
  
  <div class="row">
      <div class="center col-sm-12">
          <h1>Burger Burger!</h1>

          <h2>SUPER PHAT BURGERS!</h2>
        <p></p>
      </div>
  </div>

<div class="row" id="eatenBurger">
      <div class="col-sm-6">
    <h3>List Of All Available Burgers</h3>

    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.id}}
            {{this.burger_name}}
             <form action="/{{this.id}}?_method=DELETE" method="DELETE">
                    <input type="hidden" name="devoured" value="true">
                    <button class="btn-primary" name='devoured' value="1" type="submit">Devour It!</button>
             </form>
          </li>
        {{/unless}}
      {{/each}}
    </ul>

    <h2><img src="../assets/img/burger.png" type="image"></h2>

   <div class="col-sm-6" id="selectedBurger">
    <h3>Burgers that have been devoured!</h3>
        <ul>
          {{#each burgers}}
            {{#if this.devoured}}
              <li>
                {{this.id}}
                {{this.burger_name}}
              </li>
            {{/if}}
          {{/each}}
        </ul>
     </div>
    </div>


  <div class="row">
      <div class="center col-sm-12">
        <h3>Add a Burger</h3>
        <form class="create-form">
          <div class="form-group">
              <label for="ca">Please Enter Burger Name:</label>
              <input type="text" id="ca" name="devoured" >
              <button type="submit">Add Burger</button>
              <input type="radio" name="devoured" value="0">Select to confirn your order!!>
          </div>
        </form>
      </div>
    </div>
</div



